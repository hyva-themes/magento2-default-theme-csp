<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="content">
            <block class="Magento\Framework\View\Element\Template" name="unsubscription_form" cacheable="false" template="Magento_ProductAlert::email/email.phtml" />
        </referenceContainer>
        <referenceBlock name="topmenu_generic">
            <!-- Disable block_html caching on the un-cached pages, because the top menu is shared with cached pages. -->
            <!-- Otherwise the script tags will be used on FPC pages with (wrong) nonce attribute values, while they should be enabled through SHAs there. -->
            <arguments>
                <argument name="cache_lifetime" xsi:type="boolean">false</argument>
            </arguments>
        </referenceBlock>
    </body>
</page>
