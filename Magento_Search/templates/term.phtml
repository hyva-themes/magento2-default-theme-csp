declare(strict_types=1);

/** @var Term $block */
/** @var Escaper $escaper */

use Magento\Framework\Escaper;
use Magento\Search\Block\Term;
?>
<?php if (count($block->getTerms()) > 0): ?>
    <ul role="list" class="flex flex-wrap -mx-2 md:-mx-4 items-baseline">
        <?php foreach ($block->getTerms() as $term): ?>
            <li class="m-2 md:mx-4"
                style="font-size: <?= /** @noEscape */ ($term->getRatio()*70+75) ?>%"
            >
                <a href="<?= $escaper->escapeUrl($block->getSearchUrl($term)) ?>"
                   class="hover:underline"
                >
                    <?= $escaper->escapeHtml($term->getQueryText()) ?>
                </a>
            </li>
        <?php endforeach; ?>
    </ul>
<?php else: ?>
    <div>
        <?= $escaper->escapeHtml(__('There are no search terms available.')) ?>
    </div>
<?php endif; ?>
