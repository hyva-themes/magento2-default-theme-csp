<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <title>Set a New Password</title>
    </head>
    <update handle="hyva_form_validation"/>
    <body>
        <referenceBlock name="root">
            <action method="setHeaderTitle">
                <argument translate="true" name="title" xsi:type="string">Set a New Password</argument>
            </action>
        </referenceBlock>
        <referenceContainer name="content">
            <block class="Magento\Customer\Block\Account\Resetpassword" name="resetPassword" template="Magento_Customer::form/resetforgottenpassword.phtml" cacheable="false"/>
        </referenceContainer>
        <referenceContainer name="before.body.end">
            <block name="password.validate.js" template="Magento_Customer::js/password-validation.phtml"/>
        </referenceContainer>
        <referenceBlock name="topmenu_generic">
            <!-- Disable block_html caching on the un-cached pages, because the top menu is shared with cached pages. -->
            <!-- Otherwise the script tags will be used on FPC pages with (wrong) nonce attribute values, while they should be enabled through SHAs there. -->
            <arguments>
                <argument name="cache_lifetime" xsi:type="boolean">false</argument>
            </arguments>
        </referenceBlock>
    </body>
</page>
