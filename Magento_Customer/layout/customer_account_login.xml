<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <title>Customer Login</title>
    </head>
    <body>
        <referenceContainer name="content">
            <container
                name="customer.login.container"
                htmlTag="div"
                htmlId="customer-login-container"
                htmlClass="login-container"
            >
                <block
                    class="Magento\Customer\Block\Form\Login"
                    name="customer_form_login"
                    template="Magento_Customer::form/login.phtml"
                    cacheable="false"
                >
                    <container name="form.additional.info" as="form_additional_info"/>
                </block>
                <block class="Magento\Customer\Block\Form\Login\Info" name="customer.new" template="Magento_Customer::newcustomer.phtml"/>
            </container>
        </referenceContainer>

        <referenceBlock name="topmenu_generic">
            <!-- Disable block_html caching on the un-cached pages, because the top menu is shared with cached pages. -->
            <!-- Otherwise the script tags will be used on FPC pages with (wrong) nonce attribute values, while they should be enabled through shas there. -->
            <arguments>
                <argument name="cache_lifetime" xsi:type="boolean">false</argument>
            </arguments>
        </referenceBlock>
    </body>
</page>
