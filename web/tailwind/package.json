{
  "name": "@hyva-themes/magento2-default-theme",
  "version": "3.0.0",
  "description": "Hyvä-Themes Default Theme, a TailwindCSS and Alpine.js based Magento frontend theme that makes eCommerce happy.",
  "author": "Hyvä Themes BV",
  "private": true,
  "license": "proprietary",
  "main": "tailwind.config.js",
  "engines": {
    "node": ">=16.0.0"
  },
  "scripts": {
    "start": "npm run watch",
    "watch": "npx tailwindcss --postcss -i tailwind-source.css -o ../css/styles.css  --watch --verbose",
    "browser-sync": "npx browser-sync start --config ./browser-sync.config.js",
    "build": "npx tailwindcss --postcss -i tailwind-source.css -o ../css/styles.css --minify"
  },
  "browserslist": [
    "last 3 version",
    "> 0.5%",
    "not dead",
    "not op_mini all"
  ],
  "dependencies": {
    "@hyva-themes/hyva-modules": "^1.0.9",
    "@tailwindcss/forms": "^0.5.7",
    "@tailwindcss/typography": "^0.5.10",
    "browser-sync": "^2.27.10",
    "postcss": "^8.4.33",
    "postcss-import": "^14.1.0",
    "postcss-preset-env": "^9.3.0",
    "tailwindcss": "^3.4.1"
  }
}
