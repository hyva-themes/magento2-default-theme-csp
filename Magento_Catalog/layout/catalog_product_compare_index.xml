<page layout="1column" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">

    <!-- Make wishlist JS available -->
    <update handle="catalog_list_item"/>

    <body>
        <referenceBlock name="page.main.title">
            <action method="setPageTitle">
                <argument translate="true" name="page_title" xsi:type="string">Compare Products</argument>
            </action>
        </referenceBlock>
        <referenceContainer name="content">
            <block class="Magento\Catalog\Block\Product\Compare\ListCompare"
                   name="catalog.compare.list"
                   template="Magento_Catalog::product/compare/list.phtml"
                cacheable="false">
                <arguments>
                    <argument name="hyva_js_block_dependencies" xsi:type="array">
                        <item name="category.products.list.js.wishlist" xsi:type="boolean">true</item>
                    </argument>
                </arguments>
            </block>
        </referenceContainer>
        <referenceBlock name="topmenu_generic">
            <!-- Disable block_html caching on the un-cached pages, because the top menu is shared with cached pages. -->
            <!-- Otherwise the script tags will be used on FPC pages with (wrong) nonce attribute values, while they should be enabled through shas there. -->
            <arguments>
                <argument name="cache_lifetime" xsi:type="boolean">false</argument>
            </arguments>
        </referenceBlock>
    </body>
</page>

