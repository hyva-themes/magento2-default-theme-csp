<script>
    function initShippingTotalSegment() {
        return {
            isShippingTotal() {
                return this.segment.code === 'shipping' && this.quoteData.is_virtual === 0 && !!this.shippingMethod;
            }
        };
    }
    (() => {
        const initFn = () => Alpine.data('initShippingTotalSegment', initShippingTotalSegment);
        window.Alpine
            ? initFn()
            : window.addEventListener('alpine:init', initFn, {once: true})
    })()
</script>
