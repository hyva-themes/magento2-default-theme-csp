<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <title>Email to a Friend</title>
    </head>
    <body>
        <referenceBlock name="page.main.title">
            <action method="setPageTitle">
                <argument name="title" translate="true" xsi:type="string">Email to a Friend</argument>
            </action>
        </referenceBlock>
        <referenceContainer name="content">
            <block class="Magento\SendFriend\Block\Send"
                   name="sendfriend.send"
                   cacheable="false"
                   template="Magento_SendFriend::send.phtml"
            >
                <container name="form.additional.info" as="form_additional_info"/>
                <block name="product_item"
                       template="Magento_SendFriend::item.phtml">
                </block>
            </block>
        </referenceContainer>
        <referenceBlock name="topmenu_generic">
            <!-- Disable block_html caching on the un-cached pages, because the top menu is shared with cached pages. -->
            <!-- Otherwise the script tags will be used on FPC pages with (wrong) nonce attribute values, while they should be enabled through SHAs there. -->
            <arguments>
                <argument name="cache_lifetime" xsi:type="boolean">false</argument>
            </arguments>
        </referenceBlock>
    </body>
</page>
